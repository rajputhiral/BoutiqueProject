@model BoutiqueProject.Models.Product



<div class="form-group">
    <label>Category Name</label>
    @Html.DropDownListFor(m => m.catid, new SelectList(ViewBag.cat, "catid", "catnm"), "--Select--", new { @class = "form-control" })

</div>

<div class="form-group">
    <label>SubCategory Name</label>
    @Html.DropDownListFor(m => m.subcatid, new SelectList(ViewBag.subcat, "subcatid", "subcatname"), "--Select--", new { @class = "form-control" })

</div>

<div class="form-group">
    <label>Product Name</label>
    @Html.TextBoxFor(m => m.pname, new { @class = "form-control" })

</div>

<div class="form-group">
    <label>Product Image</label>
    @Html.TextBoxFor(m => m.prodpic, new { @type = "file" })

</div>


<div class="form-group">
    <label>Product Price</label>
    @Html.TextBoxFor(m => m.price, new { @class = "form-control" })

</div>


<div class="form-group">
    <label>Product Description</label>
    @Html.TextAreaFor(m => m.pdescription, new { @class = "form-control" })
</div>

<div class="form-group">
    <input type="submit" class="btn btn-primary" value="Save" />
    <input type="reset" class="btn btn-primary" value="Cancel" />
</div>


