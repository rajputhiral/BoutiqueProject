
@{
    ViewBag.Title = "showorder";
    Layout = "~/Views/Shared/AdminMaster.cshtml";
}

<h2>showorder</h2>

<div class="container-fluid mt-5 content-inner">
    <div class="card mb-4 wow fadeIn">
        <!--Card content-->
        <!--<div class="card-body d-sm-flex justify-content-between">

            <h4 class="mb-2 mb-sm-0 pt-1">
                <a href="@Url.Action("Index","SuperAdmin")" target="_blank">Home Page</a>
                <span></span>
                <span></span>
            </h4>

        </div>-->
    </div>
    <div class="row wow fadeIn title_header">
        <!--Grid column1-->
        <div class="col-md-12 mb-4">
            <div class="card mb-4">
                <!-- Card header -->
                <div class="card-header text-left blue-gradient text-white mdtitle">
                    Order
                </div>

                <!--Card content-->
                <div class="card-body table-responsive">


                    <table id="dtBasicExample" class="table table-striped">
                        <thead>
                            <tr class="text-center gaurang-gradient">
                                <th>Client Name</th>
                                <th>Email</th>
                                <th>Contact</th>
                                <th>Address</th>
                                <th>Product Name</th>
                                <th>Price</th>
                                <th>Quantity</th>
                                <th>Ordered Date</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr align="center">
                                    <td>@item.fname &nbsp;&nbsp;@item.lname </td>
                                    <td>@item.email</td>
                                    <td>@item.contact</td>
                                    <td>@item.address</td>
                                    <td>@item.pname</td>
                                    <td>@item.price</td>
                                    <td>@item.quantity</td>
                                    <td>@item.odate</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>


