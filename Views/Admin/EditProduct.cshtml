@model  BoutiqueProject.Models.Product
@{
    ViewBag.Title = "EditProduct";
    Layout = "~/Views/Shared/AdminMaster.cshtml";
}






<div class="container-fluid mt-5 content-inner">
    <div class="card mb-4 wow fadeIn">
        <!--Card content-->
        <!--<div class="card-body d-sm-flex justify-content-between">

            <h4 class="mb-2 mb-sm-0 pt-1">
                <a href="@Url.Action("Index","SuperAdmin")" target="_blank">Home Page</a>
                <span></span>
                <span></span>
            </h4>

        </div>-->
    </div>
    <div class="row wow fadeIn title_header">
        <!--Grid column1-->
        <div class="col-md-12 mb-4">
            <div class="card mb-4">
                <!-- Card header -->
                <div class="card-header text-left blue-gradient text-white mdtitle">
                    Category
                </div>
                <!--Card content-->
                <div class="card-body table-responsive">
                    @using (Html.BeginForm("EditProduct", "Admin", FormMethod.Post, new { @enctype = "multipart/form-data" }))
                    {
                        @Html.HiddenFor(m => m.pid)

                        <div class="form-group">
                            <label>product Name</label>
                            @Html.TextBoxFor(m => m.pname, new { @class = "form-control" })

                        </div>
                        <div class="form-group">
                            <label>product Image</label>
                            @Html.TextBoxFor(m => m.pname, new { @type = "file" })

                        </div>
                        <div>
                            <img src="~/product/@Model.prodpic" height="200" width="200" />
                        </div>
                        <div class="form-group">
                            <label>product Price</label>
                            @Html.TextBoxFor(m => m.price, new { @class = "form-control" })

                        </div>
                        <div class="form-group">
                            <label>product Describtion</label>
                            @Html.TextBoxFor(m => m.pdescription, new { @class = "form-control" })

                        </div>


                        <div class="form-group">
                            <input type="submit" class="btn btn-primary" value="Update" />
                            <input type="reset" class="btn btn-primary" value="Cancel" />
                        </div>

                    }

                </div>
            </div>
        </div>
    </div>



