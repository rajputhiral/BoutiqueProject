
@{
    ViewBag.Title = "SignIn";
    Layout = "~/Views/Shared/UserMaster.cshtml";
}
<div class="fashion_section">
    <div id="main_slider" class="carousel slide" data-ride="carousel">
        <div>
            <div class="carousel-item active">
                <div class="container">
                    <h1 class="fashion_taital">SignIn</h1>
                    <div class="fashion_section_2">
                        <div class="row">
                            <div class="col-lg-12 col-sm-12">
                                @using (Html.BeginForm())
                                {
                                    <div class="box_main">

                                        <div class="form-group">
                                            <label>Email</label>
                                            <input type="text" name="email" class="form-control" />

                                        </div>

                                        <div class="form-group">
                                            <label>Password</label>
                                            <input type="password" name="password" class="form-control" />

                                        </div>


                                        <div class="text-center">
                                            <button type="submit" class="btn btn-primary">Sign In</button>
                                        </div>
                                    </div>
                                }
                                <a href="@Url.Action("SignUP","Home")">
                                    <i class="fa fa-user" aria-hidden="true"></i>
                                    <span class="padding_10">Create an account as a User</span>
                                </a>
                                <br />
                                <a href="@Url.Action("Vendor_SignUP","Home")">
                                    <i class="fa fa-user" aria-hidden="true"></i>
                                    <span class="padding_10">Create an account as a Vendor</span>
                                </a>

                            </div>

                        </div>
                    </div>
                </div>
            </div>

        </div>


    </div>
</div>
