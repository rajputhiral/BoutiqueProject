@model List<BoutiqueProject.Models.csca>

@{
    ViewBag.Title = "AddArea";
    Layout = "~/Views/Shared/AdminMaster.cshtml";
}

<h2>AddArea</h2>

<div class="container-fluid mt-5 content-inner">
    <div class="card mb-4 wow fadeIn">
        <!--Card content-->
        <!--<div class="card-body d-sm-flex justify-content-between">

            <h4 class="mb-2 mb-sm-0 pt-1">
                <a href="@Url.Action("Index","SuperAdmin")" target="_blank">Home Page</a>
                <span></span>
                <span></span>
            </h4>

        </div>-->
    </div>
    <div class="row wow fadeIn title_header">
        <!--Grid column1-->
        <div class="col-md-12 mb-4">
            <div class="card mb-4">
                <!-- Card header -->
                <div class="card-header text-left blue-gradient text-white mdtitle">
                    Area
                </div>

                <!--Card content-->
                <div class="card-body table-responsive">
                    @using (Html.BeginForm("AddArea", "Admin", FormMethod.Post, new { @enctype = "multipart/form-data" }))
                    {
                        @Html.Partial("_AddArea", new BoutiqueProject.Models.csca())
                    }

                    <table id="dtBasicExample" class="table table-striped">
                        <thead>
                            <tr class="text-center gaurang-gradient">
                                <th>
                                    Country
                                </th>
                                <th>
                                    State
                                </th>
                                <th>
                                    City
                                </th>
                                <th>
                                    Area
                                </th>


                                <th>
                                    Edit
                                </th>
                                <th>
                                    Delete
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr align="center">
                                    <td>
                                        @item.cntryname
                                    </td>
                                    <td>
                                        @item.stname
                                    </td>
                                    <td>
                                        @item.citynm
                                    </td>

                                    <td>
                                        @item.areanm
                                    </td>

                                    <td>
                                        @Html.ActionLink("Edit", "EditArea", new { id = item.areaid })
                                    </td>
                                    <td>
                                        @Html.ActionLink("Delete", "DeleteArea", new { id = item.areaid }, new { @onclick = "return confirm('r u sure want to del?')" })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>






