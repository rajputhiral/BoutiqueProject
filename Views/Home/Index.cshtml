
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/UserMaster.cshtml";
}

<div class="fashion_section">
    <div id="main_slider" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <div class="container">
                    <h1 class="fashion_taital">Boutiques</h1>
                    <div class="fashion_section_2">
                        <div class="row">

                            @foreach (var item in Model)
                            {
                                <div class="col-lg-4 col-sm-4">
                                    <div class="box_main">
                                        <h4 class="shirt_text">@item.bname</h4>
                                        <div class="tshirt_img"><img src="~/BoutiqueImages/@item.bpic"></div>
                                        <div class="btn_main">
                                            <div class="seemore_bt">
                                                @Html.ActionLink("View", "ShowCat", new { id = item.Id, btid = item.Id })
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>

